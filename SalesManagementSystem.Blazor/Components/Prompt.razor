<MudDialog>
    <DialogContent>
        <MudText>@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="@OkButtonColor" Variant="Variant.Filled" OnClick="Submit">@ButtonText</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] 
    public required MudDialogInstance MudDialog { get; set; }

    [Parameter] public required string ContentText { get; set; }

    [Parameter] public string ButtonText { get; set; } = "Ok";

    [Parameter] public Color OkButtonColor { get; set; } = Color.Primary;

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}